# Environment Configuration for Patient Service
# Copy this file to .env and update values for your environment

# Server Configuration
NODE_ENV=development
HOST=0.0.0.0
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://patient_user:patient_password@localhost:5433/patient_db
DATABASE_SSL=false
DATABASE_MAX_CONNECTIONS=20

# Redis Configuration
REDIS_URL=redis://localhost:6380
# REDIS_PASSWORD=your-redis-password

# Kafka Configuration
KAFKA_BROKERS=localhost:9093
KAFKA_CLIENT_ID=patient-service
KAFKA_GROUP_ID=patient-service-group

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-chars
JWT_EXPIRES_IN=1h

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Service Configuration
VERSION=1.0.0
SERVICE_NAME=patient-service

# HIPAA Compliance - Encryption Key (32 bytes hex)
ENCRYPTION_KEY=your-encryption-key-32-chars-long-change-in-production

# Logging
LOG_LEVEL=info