{
  "name": "kpi-validation",
  "scripts": {
    "test:kpi-validation": "vitest run src/test/kpi-validation.test.tsx --reporter=verbose",
    "test:dashboard-consistency": "vitest run src/test/dashboard-consistency.test.tsx --reporter=verbose",
    "test:activity-logging": "vitest run src/test/activity-logging.test.tsx --reporter=verbose",
    "test:revenue-calculation": "vitest run src/test/revenue-calculation.test.tsx --reporter=verbose",
    "test:all-kpis": "npm run test:kpi-validation && npm run test:dashboard-consistency && npm run test:activity-logging && npm run test:revenue-calculation",
